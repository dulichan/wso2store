<div class="asset-description">
    {{#with asset}}
        {{#attributes}}
            <div class="asset-description-header">
                <div class="row">
                    <div class="span9">
                        <div class="asset-banner">
                            <img src="{{#if images_banner}}{{url images_banner}}{{/if}}">
                        </div>
                        <div class="asset-intro-box">
                            <img src="{{#if images_thumbnail}}{{url images_thumbnail}}{{/if}}">

                            <h3>{{cap overview_name}}</h3>
                            <small> {{t "Version"}} 1.0.0</small>
                            <small> {{t "by"}} {{overview_provider}} </small>
					<span class="asset-rating">
                        {{#if ../../user}}
                            <span class="user-rating" data-rating="{{../../rating.user}}">
							<input class="auto-submit-star" name="star2" type="radio" class="star"
                                   value="1"/>
							<input class="auto-submit-star" name="star2" type="radio" class="star"
                                   value="2"/>
							<input class="auto-submit-star" name="star2" type="radio" class="star"
                                   value="3"/>
							<input class="auto-submit-star" name="star2" type="radio" class="star"
                                   value="4"/>
							<input class="auto-submit-star" name="star2" type="radio" class="star"
                                   value="5"/>
						</span> ({{../../rating.user}})
                        {{else}}
                            <div class="asset-rating-{{../../rating.average}}star"></div>
                        {{/if}}

                    </span>

                            <a id="btn-add-gadget" class="btn btn-primary" href="#modal-add-gadget" data-toggle="modal"
                               data-aid="{{../path}}" data-type="{{../type}}"> {{>process-asset-text}} </a>
                            <a class="btn btn-embed" href="#" data-toggle="tooltip" title="{{t "Embed this gadget"}}"><i
                                    class="icon-angle-left"></i><i class="icon-angle-right"></i></a>

                        </div>

                    </div>

                </div>

            </div>

            <div class="assetp-properties">

                <ul class="nav nav-tabs" id="assetp-tabs" data-aid="{{../path}}">
                    <li class="active">
                        <a href="#tab-properties" data-toggle="tab" data-type="basic">{{t "Description"}}</a>
                    </li>
                    <li>
                        <a href="#tab-reviews" data-toggle="tab" data-type="comments">{{t "User Reviews"}}</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="tab-properties">
                        <div class="content">
                            {{>overview .}}
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-reviews">

                        <div class="content"></div>
                    </div>

                </div>

            </div>
        {{/attributes}}
    {{/with}}
</div>
