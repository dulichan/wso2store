<div>
	<div id="assets-container">
	
		{{#if assets}}
		{{#slice assets size="4"}}
		<div class="row-fluid">
		
			{{#each .}}
			
			<div class="span3 asset" data-path="{{path}}" data-type="{{type}}" style="background-image:url({{url "/themes/store/img/os/"}}{{attributes.overview_platform}}.png)">
				{{#attributes}}
				<a href="{{url "/asset"}}/{{../type}}?asset={{../path}}">
				<div class="asset-icon">
					{{#if ../indashboard}}
						<i class="icon-bookmark store-bookmark-icon"></i>
					{{/if}}
				<img style="width: 150px; margin-left:25px; margin-top:25px" src="{{#if images_icon}}{{images_icon}}{{/if}}">
				</div> </a>

				<div class="asset-details">
					<div class="asset-name">
						<a href="{{url "/asset"}}/{{../type}}?asset={{../path}}"> <h4>{{overview_name}}</h4> </a>
					</div>
					<div class="asset-rating">
						<div class="asset-rating-{{../rating/average}}star">

						</div>
					</div>
					<div class="asset-author-category">
						<ul>
							<li>
								<h4>{{t "Category"}}</h4>
								<a class="asset-category" href="#">{{cap ../type}}</a>
							</li>
							<li>
								<h4>{{t "Author"}}</h4>
								<a class="asset-author" href="#">{{overview_provider}}</a>
								
							</li>

						</ul>

						{{#if ../indashboard}}
						<a href="#" class="btn disabled btn-added">{{t "Bookmarked"}}</a>
						{{else}}
							{{# if ../../../../sso}}			
							<a href="{{url "/login.jag"}}" class="btn btn-primary asset-add-btn">{{>process-asset-text}}</a>							
							{{else}}							
								<a href="#" class="btn btn-primary asset-add-btn">{{>process-asset-text}}</a>
							{{/if}}
							{{# if ../../../../user.username}}		
							<a href="#" data-app-id="{{../../../id}}"  data-toggle="modal" class="btn btn-primary asset-add-btn">{{>process-asset-text}}</a>
							
							{{/if}}
						{{/if}}

					</div>
				</div>
				{{/attributes}}
			</div>
			{{/each}}
		</div>
		{{/slice}}
		{{else}}
			<div class="empty-assert">{{t "We couldn't find anything for you."}}</div>
		{{/if}}

	</div>

</div>





<!-- Modal Features -->
<div id="devicesList" class="modal hide" tabindex="-1" role="dialog" aria-hidden="true" style="width:700px">

	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal"
			aria-hidden="true">x</button>
		<h3 id="myModalLabel">Devices</h3>
	</div>
	<div class="modal-body">
	
				<div class="span12">
				{{#devices}}
							<div  data-dismiss="modal" class="span1 device-image-block text-center" data-device-id="{{id}}">
							<img class="device-image" style="height:100px" src="/assets/wso2mobile/img/models/{{model}}.png">
							<div class="text-center">
								{{name}}
							</div>
							</div>
				{{/devices}}	
				
				</div>	
		
	</div>
</div>
